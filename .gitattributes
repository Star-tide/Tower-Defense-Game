* text=auto

# Godot scene and resource files - keep LF endings for diffs and stability
*.tscn text eol=lf
*.tres text eol=lf
*.gd text eol=lf
*.cfg text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.md text eol=lf
*.sh text eol=lf

# Scripts on Windows that may want CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

